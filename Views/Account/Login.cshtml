@model TheBookCave.Models.InputModels.LoginInputModel

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1 class="text-center">Login</h1>
        <br/>
        <form asp-action="Login"  class="form-horizontal" asp-controller="Account">
            <div class="form-group">
                <label for="login-email">Email</label>
                <input asp-for="Email" type="email"  class="form-control" id="login-email" placeholder="Enter your email..."/> <br/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="login-password">Password</label>
                <input asp-for="Password" type="password"  class="form-control" id="input-password" placeholder="Enter your password..."/> <br/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RememberMe" type="checkbox" /> Remember me
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary"/>
            </div>
        </form>
        <p class="text-center">Dont have an account?
            <a asp-area="" asp-controller="Account" asp-action="Register">Register!</a>
        </p>
    </div>
    <div class="col-md-3"></div>
</div>