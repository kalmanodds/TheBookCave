@model TheBookCave.Models.InputModels.BookInputModel

<form asp-controller="Account" asp-action="AddBook" method="POST">
    Title<input type="text" asp-for="Title">
    Author <input type="text" asp-for="Author">
    ISBN10 <input type="text" asp-for="ISBN10">
    ISBN13 <input type="text" asp-for="ISBN13">
    Description <textarea asp-for="Description" cols="30" rows="10"></textarea>
    Price <input type="number" step="0.01" asp-for="Price">
    Genre <input type="text" asp-for="Genre">
    Number of Pages <input type="number" asp-for="NumberOfPages">
    Day of Publication:
    Day <input type="number" asp-for="DayPublished">
    Month <input type="number" asp-for="MonthPublished">
    Year <input type="number" asp-for="YearPublished">
    Publisher <input type="text" asp-for="Publisher">
    Number In Stock: <input type="number" asp-for="InStock">
    Image root: <input type="text" asp-for="Image">
    <input type="submit" value="ADD BOOK">
</form>

<span asp-validation-for="Title" class="text-danger"></span>
