@model List<TheBookCave.Models.ViewModels.BookViewModel>

<h1 class="text-center">Your Cart</h1>
<hr/>

<div id="cart">
    @foreach (var Book in Model)
    {
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 row" id="cart-item">
                <div class="col-md-2">
                    <div class="thumbnail">
                        @{string path = Book.Image;}
                        <img class="image-Small" src=@Url.Content(path) alt="@Book.Title">
                        @{int intRating  = ((int)(((Book.Rating * 4) + 1) / 2)) * 5; }
                        @{string stringRating = "~/images/stars/" + intRating + "StarsSmall.png"; }
                        <img src=@Url.Content(stringRating) alt="Rating" class="img-responsive center-block">
                    </div>
                </div>
                <div class="col-md-6">
                    <h2>@Book.Title</h2>
                </div>
                <div class="col-md-2">
                    <h3>@Book.Price$</h3>
                </div>
                <div class="col-md-2">
                    <br>
                    <form asp-action="" asp-controller="" asp-route-id="" method="">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </div>
            </div>
            <div class="col-md-2"></div>
            
        </div>
        <hr/>
    }
</div>

<div class="row">
    <div class="col-md-9"></div>
    <div class="col-md-2" id="checkout-button">
        <form asp-controller="Account" asp-action="MakeOrder" asp-route-id="rghgjhvjhvdjhjh45347yhu" method="POST">
            <input type="submit" value="Proceed To Checkout" class="btn btn-primary">
        </form>
        <!--<a asp-controller="Account" asp-action="MakeOrder" class="btn btn-primary">Proceed To Checkout</a>-->
    </div>
    <div class="col-md-1"></div>
</div>