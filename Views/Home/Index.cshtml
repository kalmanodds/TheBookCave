@model List<TheBookCave.Models.ViewModels.BookViewModel>[]

@{
  ViewData["Title"] = "Home Page";
}

<img src="~/images/main-logo-white.png" alt="Icon" class="center-logo">

<h2>
  <a asp-action="BestSellers" asp-controller="Home">Best Sellers</a>
</h2>
<div class="container testimonial-group">
  <div class="row custom-scroll-bar">
    @foreach (var Book in Model[0])
    {
      <div class="col-xs-4">
        <div class="thumbnail">
          @{string path = Book.Image;}
          <img class="image-small" src=@Url.Content(path) alt="...">
          <div class="caption">
            <h5 class="overflow-caption text-center">
              <a asp-controller="Book" asp-action="Details" asp-route-id="@Book.ID">@Book.Title</a>
            </h5>
            <h5 class="overflow-caption text-center">
              <a asp-controller="Home" asp-action="FilteredCatalogue" asp-route-searchWord="@Book.Author">@Book.Author</a>
            </h5>
            @{int intRating  = ((int)(((Book.Rating * 4) + 1) / 2)) * 5; }
            @{string stringRating = "~/images/stars/" + intRating + "StarsSmall.png"; }
            <img src=@Url.Content(stringRating) alt="Rating" class="img-responsive center-block">
            <h5 class="text-center">Price: @Book.Price$</h5>
            <form asp-action="AddToCart" asp-controller="Account" asp-route-id="@Book.ID" method="POST">
              <button type="submit" class="add-to-cart center-block btn btn-primary btn-book-details">Add to Cart</button>
            </form>
          </div>
        </div>
      </div>
    }
  </div>
</div>
