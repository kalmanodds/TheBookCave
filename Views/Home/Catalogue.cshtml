@model List<TheBookCave.Models.ViewModels.BookViewModel>

<h1>The Catalogue</h1>
<div>
    @foreach (var Book in Model)
    {
    //@string rating = (int)(@Book.Rating * 20) / 2
        <div class="col-xs-4"><div class="thumbnail">
            <img src="~/images/BookSmall.png" alt="...">
            <div class="caption">
                <h3 class="text-center">@Book.Title</h3>
                <h4 class="text-center">@Book.Author</h4>
                <!--<h5>@rating</h5>-->
                <img src="~/images/stars/35StarsSmall.png" class="img-responsive center-block" alt="rating">
                <hr>
                <p class="text-center">Price: @Book.Price</p>
                <p>
                    <a href="#" class="btn btn-primary btn-block" role="button">Add to Cart</a>
                </p>
            </div>
        </div>
    }
</div>